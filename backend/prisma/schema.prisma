// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// 회의실 모델
model MeetingRoom {
  id        String        @id @default(uuid())
  name      String
  building  String
  floor     String
  capacity  Int
  hasMonitor Boolean       @default(false)
  hasProjector Boolean     @default(false)
  status    RoomStatus    @default(ACTIVE)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  
  reservations Reservation[]

  @@map("meeting_rooms")
}

/// 예약 모델
model Reservation {
  id        String      @id @default(uuid())
  roomId    String
  room      MeetingRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)
  userId    String?
  user      User?       @relation(fields: [userId], references: [id], onDelete: SetNull)
  title     String
  startAt   DateTime
  endAt     DateTime
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  recurringId String?
  recurring   RecurringReservation? @relation(fields: [recurringId], references: [id], onDelete: SetNull)

  @@index([roomId, startAt, endAt])
  @@index([recurringId])
  @@map("reservations")
}

/// 정기예약 그룹 모델
model RecurringReservation {
  id        String   @id @default(uuid())
  userId    String
  roomId    String
  title     String
  startDate DateTime
  endDate   DateTime
  weekDays  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reservations Reservation[]

  @@map("recurring_reservations")
}

/// 사용자 모델
model User {
  id          String       @id @default(uuid())
  employeeId  String       @unique
  name        String
  email       String?
  
  deptId      String?
  department  Department?  @relation(fields: [deptId], references: [id], onDelete: SetNull)
  
  company     String?
  role        UserRole     @default(USER)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  reservations Reservation[]
  auditLogs    AuditLog[]

  @@map("users")
}

/// 부서 모델
model Department {
  id          String   @id
  name        String
  companyCode String?
  companyName String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  users       User[]
  
  @@map("departments")
}

/// 감사 로그 모델
model AuditLog {
  id        String   @id @default(uuid())
  action    String
  entity    String
  entityId  String
  details   Json?
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  createdAt DateTime @default(now())

  @@map("audit_logs")
}

enum RoomStatus {
  ACTIVE
  CLOSED
}

enum UserRole {
  ADMIN
  USER
}
